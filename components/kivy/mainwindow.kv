<CamView>

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        width: root.width / 5
        height: root.height
        BoxLayout:
            id: toolbox
            width: root.width / 5
            height: root.height
            size_hint: None, 1.0
            orientation: 'vertical'
            padding: 2

            Label:
                text: "Brightness"
            
            Slider:
                id: brightness
                min: -50
                max: 50
                value: 0 

            Label:
                text: "Contrast"

            Slider:
                id: contrast
                min: 0
                max: 100
                value: 50 

            Camera:
                id: camera
                resolution: (640, 480)
                allow_stretch: True
                play: True

                
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Image:
            id: processed_frame
            size_hint: None, 1.0
            width: 4*root.width / 5
            height: root.height
            allow_stretch: True
            source: "assets/images/testbeeld.png"

